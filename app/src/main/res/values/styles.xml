<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_theme_primary</item>
        <item name="colorPrimaryDark">@color/app_theme_primary_dark</item>
        <item name="colorAccent">@color/app_theme_accent</item>
    </style>

    <!-- General -->

    <style name="AppTheme.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@drawable/bg_primary</item>
    </style>

    <style name="AppTheme.CircularProgressBar">
        <item name="android:background">@color/app_progressbar_background</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AppTheme.PagerIndicator">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Specific Views -->

    <style name="AppTheme.Gallery" />

    <style name="AppTheme.Gallery.Detail" />

    <style name="AppTheme.Gallery.GridThumbnailTitle">
        <item name="android:color">@color/app_gallery_grid_photo_title</item>
        <item name="android:textSize">@dimen/app_text_size_h10</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Gallery.GridThumbnail">
        <item name="android:layout_width">@dimen/app_gallery_grid_photo_size</item>
        <item name="android:layout_height">@dimen/app_gallery_grid_photo_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.Gallery.GridThumbnailBorder">
        <item name="android:padding">@dimen/app_gallery_grid_photo_border</item>
    </style>

    <style name="AppTheme.Gallery.GridBackground">
        <item name="android:background">@color/app_gallery_grid_background</item>
        <item name="android:padding">@dimen/activity_margin</item>
    </style>

    <style name="AppTheme.Gallery.GridNoItems">
        <item name="android:textSize">@dimen/app_text_size_h6</item>
    </style>

    <style name="AppTheme.Gallery.PreviewBackground">
        <item name="android:background">@drawable/bg_primary</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.Gallery.PreviewImage">
        <item name="android:layout_width">@dimen/app_gallery_pager_image_size</item>
        <item name="android:layout_height">@dimen/app_gallery_pager_image_size</item>
    </style>

    <style name="AppTheme.Gallery.Detail.FormTitle">
        <item name="android:textColor">@color/app_gallery_detail_pager_title</item>
    </style>

    <style name="AppTheme.Gallery.Detail.FormText">
        <item name="android:textColor">@color/app_gallery_detail_pager_text</item>
    </style>

    <style name="AppTheme.Gallery.Detail.Background">
        <item name="android:background">@color/app_gallery_detail_pager_background</item>
    </style>

    <style name="AppTheme.Gallery.Detail.Image">
        <item name="android:layout_width">@dimen/app_gallery_detail_image_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.Gallery.Detail.PagerIndicator" parent="AppTheme.PagerIndicator">
        <item name="android:background">@color/app_gallery_detail_pager_background</item>
    </style>

</resources>